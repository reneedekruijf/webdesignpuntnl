doctype html
html(lang="nl")
    block head
        head
            meta(charset="utf-8") 
            meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=3.0, minimum-scale=1.0, user-scalable=yes") 
            meta(name="robots" content="all") 
            meta(name="description" content=description) 
            meta(name="copyright" content="Copyright Webdesignpuntnl Culemborg") 
            meta(name="image" content="https://www.webdesignpuntnl.com/site-image.jpg")
            meta(name="name" content="Webdesignpuntnl")
            link(rel="apple-touch-icon" sizes="180x180" href=`${path}apple-touch-icon.png`)
            link(rel="icon" type="image/png" sizes="32x32" href=`${path}favicon-32x32.png`)
            link(rel="icon" type="image/png" sizes="16x16" href=`${path}favicon-16x16.png`)
            link(rel="manifest" href=`${path}site.webmanifest`)
            link(rel="mask-icon" href=`${path}safari-pinned-tab.svg` color="#5bbad5")
            meta(name="msapplication-TileColor" content="#da532c")
            meta(name="theme-color" content="#ffffff")
            meta(name="twitter:card" content="summary")
            meta(name="twitter:title" content="Webdesignpuntnl")
            meta(name="twitter:description" content="Webdesignpuntnl Culemborg is een eenmanszaak gespecialiseerd in het ontwerpen en bouwen van websites.")
            meta(name="twitter:site" content="@reneedekruijf")
            meta(name="twitter:creator" content="@reneedekruijf")
            meta(name="twitter:image:src" content="https://www.webdesignpuntnl.com/site-image-preview.jpg")
            meta(name="og:title" content="Webdesignpuntnl")
            meta(name="og:description" content="Webdesignpuntnl Culemborg is een eenmanszaak gespecialiseerd in het ontwerpen en bouwen van websites.")
            meta(name="og:image" content="https://www.webdesignpuntnl.com/site-image-preview.jpg")
            meta(name="og:url" content="https://www.webdesignpuntnl.com")
            meta(name="og:site_name" content="Webdesignpuntnl")
            meta(name="og:locale" content="nl")
            meta(name="og:type" content="website")
            //- link(href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet')
            //- link(href='https://fonts.googleapis.com/css?family=Raleway:400,700' rel='stylesheet')
            link(href=`${path}css/main.css` rel='stylesheet')

            title Webdesignpuntnl - #{title}
        body
            block header
                <!-- top logo -->
                header(class="header") 
                    a(href=`${path}index.html` title="homepage" class="logo")
                        div(class="logo__top")
                            div(class="logo__top__cirkelTop")
                                span(class="logo__top__cirkelTop__orange") half orange cirkel
                            h1(class="logo__text") webdesign
                                span(class="logo__text__dot") punt
                                | nl
                            div(class="logo__cirkelBottom") 
                                span(class="logo__cirkelBottom__yellow") half yellow cirkel
                    block navigation 
                        <!-- top navigation -->
                        nav(class="header__nav")
                            a(href=(`${path}index.html`) class=(page == "index" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) home
                            ul(class="header__nav__menu" data-show="1")
                                //- li(class="header__nav__menu__page")
                                    a(href=(`${path}pages/about.html`) class=(page == "about" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) over
                                li(class="header__nav__menu__page")
                                    a(href=(`${path}pages/projects.html`) class=(page == "projects" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) projecten
                                li(class="header__nav__menu__page")
                                    a(href=(`${path}pages/blog.html`) class=(page == "blog" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) blog
                                li(class="header__nav__menu__page")
                                    a(href=(`${path}pages/tools.html`) class=(page == "tools" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) tools
                                //- li(class="header__nav__menu__page")
                                    a(href=(`${path}pages/privacy.html`) class=(page == "privacy" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) privacy
                                li(class="header__nav__menu__page")
                                    a(href=(`${path}pages/contact.html`) class=(page == "contact" ? "header__nav__link header__nav__link--active" : 'header__nav__link')) contact
                            <!-- hamburger icon -->
                            div(class="menuSmall change" id="hamburgerIcon", role="button")
                                div(class="menuSmall__line01") Lijn01
                                div(class="menuSmall__line02") Lijn02
                                div(class="menuSmall__line03") Lijn03
            .pageWrapper
                main(class="main")
                    block content
                        
            footer(class="footer")
                div(class="footer__top")
                    div(class="footer__top__adress")
                        h3(class="footer__top__adress__heading") Webdesignpuntnl
                        address
                            ul
                                li(class="footer__top__adress__item")
                                    a(href="tel:0031638399229" class="footer__top__adress__tel") &plus;31638399229
                                li(class="footer__top__adress__item")
                                    span Industrieweg 1A 14
                                li(class="footer__top__adress__item")
                                    span Culemborg
                                li(class="footer__top__adress__item")
                                    span Holland
                    div(class="footer__top__social")
                        h3(class="footer__top__social__heading") Social Links
                        ul(class="footer__top__social__list")
                            li(class="footer__top__social__list__item")
                                a(href="https://www.linkedin.com/in/renee-de-kruijf-365031a/" target="_blank" rel="noopener noreferrer") 
                                    span(class="iconLinkedin" class="footer__top__icon footer__top__icon--linkedin") Linkedin 
                            li(class="footer__top__social__list__item")
                                a(href="https://twitter.com/reneedekruijf" target="_blank" rel="noopener noreferrer")
                                    span(class="iconTwitter" class="footer__top__icon footer__top__icon--twitter") Twitter 
                            li(class="footer__top__social__list__item")
                                a(href="https://instagram.com/webdesignpuntnl" target="_blank" rel="noopener noreferrer")
                                    span(class="iconInstgram" class="footer__top__icon footer__top__icon--instagram") Instagram
                            li(class="footer__top__social__list__item")
                                a(href="https://github.com/webdesignpuntnl" target="_blank" rel="noopener noreferrer")
                                    span(class="iconGithub" class="footer__top__icon footer__top__icon--github") Github
                a(class="footer__bottomLinks" href="#" id="noat-cookie-consent__setup") cookie instellingen
                a(class="footer__bottomLinks" href=(`${path}pages/privacy.html`)) privacy
                    //- div(class="footer__bottom")
                        p Webdesignpuntnl 2018
            block script
                script(src=`${path}js/main-bundle.js`)
                script(async src="https://www.googletagmanager.com/gtag/js?id=UA-63079670-2" crossorigin="anonymous")
                script
                    | window.dataLayer = window.dataLayer || [];
                    | function gtag(){dataLayer.push(arguments);}
                    | gtag('js', new Date());
                    | gtag('config', 'UA-63079670-2');
